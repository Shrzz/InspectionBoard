<UserControl x:Class="Workspace.Views.Students"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Workspace.Views"        
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:InspectionBoardLibrary.Models.Converters;assembly=InspectionBoardLibrary" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">

        <!-- Рабочая область-->
        <DockPanel LastChildFill="True">

            <!-- Верхняя полоса -->
            <materialDesign:ColorZone Mode="PrimaryMid"
                                              Padding="16"
                                              materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                              DockPanel.Dock="Top">
                <DockPanel materialDesign:ShadowAssist.ShadowDepth="Depth2">
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                           Text="Студенты"
                                           FontSize="34" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="15 0 0 5"/>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>

            <materialDesign:ColorZone Mode="PrimaryMid"
                                      Padding="16"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                      DockPanel.Dock="Bottom">
                <DockPanel materialDesign:ShadowAssist.ShadowDepth="Depth2">
                    <StackPanel Orientation="Horizontal" >
                        <Button Command="{Binding NavigateCommand}"
                                CommandParameter="Tables"
                                Content="К списку таблиц"
                                FontSize="20" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="15 0 0 5"/>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>

            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" Grid.ColumnSpan="2"
                     x:Name="GridItemsSearchBox"
                     Focusable="True"
                     Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                     DockPanel.Dock="Top"
                     Margin="20 10 20 10"
                     materialDesign:HintAssist.Hint="Поиск по таблице"
                     materialDesign:HintAssist.IsFloating="True"
                     materialDesign:TextFieldAssist.HasClearButton="True"
                     materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                     materialDesign:TextFieldAssist.DecorationVisibility="Collapsed"
                     materialDesign:TextFieldAssist.TextFieldCornerRadius="4"/>

                <Button Grid.Row="0"
                    Grid.Column="7"
                    Margin="10"
                    Content="Добавить"
                    Command="{Binding ShowAddDialogCommand}"/>

                <Button Grid.Row="0" 
                    Grid.Column="8"
                    Margin="10"
                    Content="Изменить"
                    Command="{Binding ShowEditDialogCommand}"/>

                <Button Grid.Row="0" 
                    Grid.Column="9"
                    Margin="10"
                    Content="Удалить"
                    Command="{Binding ShowRemoveDialogCommand}"/>

                <StackPanel Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="10"
                        Height="Auto"
                        CanVerticallyScroll="True"
                        Orientation="Vertical">
                    <ScrollViewer VerticalScrollBarVisibility="Visible"
                              HorizontalScrollBarVisibility="Disabled"
                              CanContentScroll="True">
                        <DataGrid Name="dg" 
                              Grid.Row="1"
                              Grid.Column="0"
                              Grid.ColumnSpan="10"
                              ItemsSource="{Binding Entities}" 
                              SelectedItem="{Binding SelectedEntity}"
                              TabIndex="1" 
                              IsReadOnly="True"
                              CanUserSortColumns="True"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              SelectionUnit="FullRow"
                              SelectionChanged="OnSelectionChanged"
                              Sorting="dg_Sorting">
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Сведения" Command="{Binding ShowDescriptionCommand}"/>
                                    <MenuItem Header="Добавить" Command="{Binding ShowAddDialogCommand}"/>
                                    <MenuItem Header="Изменить" Command="{Binding ShowEditDialogCommand}"/>
                                    <MenuItem Header="Удалить" Command="{Binding RemoveEntityCommand}"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="MouseLeftButtonUp">
                                    <b:InvokeCommandAction Command="{Binding ShowDescriptionCommand}" />
                                </b:EventTrigger>
                            </b:Interaction.Triggers>

                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Идентификатор" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate DataType="models:Student" >
                                            <TextBlock Text="{Binding Id}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Фамилия">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate DataType="models:Student">
                                            <TextBlock Text="{Binding Surname}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Имя">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate DataType="models:Student">
                                            <TextBlock Text="{Binding Name}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Отчество">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate DataType="models:Student">
                                            <TextBlock Text="{Binding Patronymic}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Группа">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate DataType="models:Student">
                                            <TextBlock Text="{Binding Group.Name}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Форма обучения">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate DataType="models:Student">
                                            <TextBlock Text="{Binding EducationForm}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>
                </StackPanel>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
