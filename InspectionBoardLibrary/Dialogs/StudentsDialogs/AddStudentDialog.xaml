<UserControl x:Class="InspectionBoardLibrary.Windows.StudentsDialogs.AddStudentDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InspectionBoardLibrary.Windows.StudentsDialogs"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:model="clr-namespace:InspectionBoardLibrary.Models.Enums"
             mc:Ignorable="d" 
             xmlns:sys="clr-namespace:System;assembly=System"
             Width="Auto" Height="Auto">
    <Grid>
        <materialDesign:Card Padding="20">
            <DockPanel Margin="20" LastChildFill="False">
                <StackPanel DockPanel.Dock="Top">
                    <TextBox materialDesign:HintAssist.Hint="Фамилия"
                         Margin="0 5" 
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                         Focusable="True" 
                         Text="{Binding Surname}" />
                    <TextBox materialDesign:HintAssist.Hint="Имя"
                         Margin="0 5" 
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                         Text="{Binding Name}"/>
                    <TextBox materialDesign:HintAssist.Hint="Отчество"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                         Text="{Binding Patronymic}"/>
                    <TextBlock Text="Группа"
                           Margin="0 10 0 0"/>
                    <ComboBox Margin="0 5" 
                          ItemsSource="{Binding Groups}" 
                          DisplayMemberPath="Name"
                          IsSynchronizedWithCurrentItem="True"
                          SelectedItem="{Binding Group}"
                          SelectedIndex="0"/>
                    <TextBlock Text="Форма обучения"
                           Margin="0 10 0 0"/>
                    <ComboBox Margin="0 5" 
                          ItemsSource="{Binding EducationForms}" 
                          IsSynchronizedWithCurrentItem="True"
                          SelectedItem="{Binding EducationForm}"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Bottom">
                    <Button Margin="20 10 20 0"
                            Content="Добавить"
                            Command="{Binding CloseDialogCommand}"
                            CommandParameter="true" Width="Auto"/>
                    <Button Margin="20 10 20 0"
                            Content="Отмена"
                            Command="{Binding CloseDialogCommand}"
                            CommandParameter="false" Width="Auto"/>
                </StackPanel>
            </DockPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
