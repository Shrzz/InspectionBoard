<UserControl x:Class="InspectionBoard.Dialogs.SubjectsDialogs.AddSubjectDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InspectionBoard.Dialogs.SubjectsDialogs"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600"
             MaxHeight="450" MaxWidth="600" 
             MinHeight="450" MinWidth="600">
    <Grid>
        <materialDesign:Card>
            <StackPanel>
                <TextBlock Text="{Binding Subject.Id, Mode=TwoWay}"/>
                <TextBlock Text="{Binding Subject.Name, Mode=TwoWay}"/>
                <TextBlock Text="{Binding Subject.LectoryHours, Mode=TwoWay}"/>
                <TextBlock Text="{Binding Subject.LaboratoryHours, Mode=TwoWay}"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
