<Window x:Class="InspectionBoard.Dialogs.AddSpecialityDialog.AddSpecialityView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InspectionBoard.Dialogs.AddSpecialityDialog"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="AddSpecialityView" Height="189.474" Width="208.842">
    <Grid>
        <TextBox Margin= "0 20 0 0" HorizontalAlignment="Center" Name ="TbLogin" Text="{Binding Path=SpecName, UpdateSourceTrigger=PropertyChanged}" 
                 materialDesign:HintAssist.Hint="Название специальности" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                  materialDesign:TextFieldAssist.DecorationVisibility="Visible"/>
        <Button Command="{Binding AddSpecialityCommand}">
            Создать
        </Button>
        <Button Margin="0 80 0 0" Command="{Binding CancelCommand}">
            Отмена
        </Button>
    </Grid>
</Window>
